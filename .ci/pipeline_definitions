landscaper:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
    steps:
      verify:
        image: 'golang:1.17'
  jobs:
    head-update:
      traits:
        draft_release: ~
        notifications:
          default:
            on_error:
              triggering_policy: 'always'
              recipients:
              - committers
              - codeowners
    pull-request:
      traits:
        pull-request: ~
        draft_release: ~
        options:
          public_build_logs: True
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          git_tags:
          - ref_template: 'refs/tags/{VERSION}'
          - ref_template: 'refs/tags/apis/{VERSION}'
          - ref_template: 'refs/tags/crdmanager/{VERSION}'
